{% extends "common/base.twig" %}

{% block css %}
    <link rel="stylesheet" href="/styles/css/login/login.css">
{% endblock %}

{% block  body %}
    <div class="row login-form">
        <div class="col-md-6">

            <h1 class="h3 align-middle text-md-center">Please enter your credentials</h1>

            <form action="/api/login/create" method="post">
                <div class="form-group row">
                    <label for="user-username" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="user-username" value="" name="username" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="user-password" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="user-password" name="password" >
                    </div>
                </div>

                <div class="divider"></div>

                <div class="form-group row">
                    <label for="user-firstname" class="col-sm-2 col-form-label">Firstname</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="user-firstname"  name="firstname" value="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="user-lastname" class="col-sm-2 col-form-label">Lastname</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="user-lastname" name="lastname"  value="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="user-email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email"  class="form-control" id="user-email" name="email"  value="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="user-address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="user-address" name="address" value="">
                    </div>
                </div>




                <div class="btns">
                    <a href="/login" class="btn btn-outline-secondary btn-create-account">
                        Login
                    </a>
                    <button type="submit" class="btn btn-primary btn-submit">Create an account</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block js %}

{% endblock %}